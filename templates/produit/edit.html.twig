{% extends 'base.html.twig' %}

{% block title %}Modifier un Produit{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
		
           
			
            <div class="content">
			
                <form action="{{ path('produitEditCheck',{'id' : produit.getId}) }}" method="post">
					
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <p id="controlesaisie" style="color:red;display:none"></p>
                            </div>
                        </div>
                    </div>
					
                    

                    




						<div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Modifier le produit {{produit.getId}}</h4>
                                </div>
                                <div class="card-body">
                                    <form>
                                        
                                        <div class="row">
                                        <div class="col-md-4 col-sm-12 pr-1">
                                                <div class="form-group">
                                                    <label>Nom</label>
                                                    <input type="text" name="nom" class="form-control" value="{{produit.getNomProduit}}" required>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-12 pr-1">
                                                <div class="form-group">
                                                    <label>Prix Unitaire</label>
                                                    <input type="text" name="prixUnitaire"  class="form-control" value="{{produit.getPrixUnitaire}}">
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-sm-12 pr-1">
                                                <div class="form-group">
                                                    <label>Nom Fournisseur</label>
                                                    <select name="idFournisseur" value="{{fournisseur.getId}}"  class="form-control" required>
                                                        <option value="" selected disabled hidden></option>
                                                        {% for f in fournisseurs %}
                                                            <option value="{{f.getId}}" > {{f.getNomFournisseur}}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        
                                        <button type="submit" class="btn btn-info btn-fill pull-left">Modifier</button>
                                        <a class="btn btn-info btn-fill pull-right" href="{{ path('produit')}}">Retour</a>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
						
						
					



					
					
					
                    
					
                    
					<div class="clearfix"></div>
                </form>
				
            </div>
        </div>
    </div>
	
	
 
    {% endblock %}